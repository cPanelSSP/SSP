sub check_for_zamfoo {
    my $has_zamfoo = 0;

    if ( -f '/scripts/prekillacct' ) {
        open my $file_fh, '<', '/scripts/prekillacct' or return;
        while (<$file_fh>) {
            if ( /zamfoo/i ) {
                $has_zamfoo = 1;
                last;
            }
        }
        close $file_fh;
    }

    if ($has_zamfoo == 1) {
        print_3rdp('Zamfoo: ');
        print_3rdp2('is installed. Multi-level reseller setups are not supported!');
    }
}

