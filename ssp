#!/usr/bin/perl

# SSP - System Status Probe
# Find and print useful troubleshooting info on cPanel servers

use strict;
use warnings;
use File::Find;
use IO::Socket::INET;
use Sys::Hostname;
use Term::ANSIColor qw(:constants);
use Storable;
use POSIX;
use Time::Local;
use IPC::Open3;

if ( !-d '/usr/local/cpanel' ) {
    die '/usr/local/cpanel not found';
}

if ( $^O ne 'linux' ) {
    die "Unknown OS: $^O (only Linux is supported)";
}

{
    local @INC = ( @INC, "/usr/local/cpanel" );
    eval { local $SIG{__DIE__}; local $SIG{__WARN__}; require Cpanel::CachedCommand; };
}

if ( $< != 0 ) {
    die "SSP must be run as root\n";
}

$ENV{'PATH'} = '/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin';

my $version = '4.99.74';

$|                          = 1;
$Term::ANSIColor::AUTORESET = 1;

######################
##  BEGIN GLOBALS   ##
######################

my $cpanel_version        = get_cpanel_version();
